<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="emp">
	<select id="getAllEmp" resultType="com.ict.edu04.vo.EmpVO">
		select * from emp
	</select>
	
	<select id="getDeptnoSearch" parameterType="com.ict.edu04.vo.EmpVO" resultType="com.ict.edu04.vo.EmpVO">
		select * from emp where deptno = #{deptno}
	</select>
	
	<select id="getDynamicSearch" parameterType="Map" resultType="com.ict.edu04.vo.EmpVO">
		select * from emp 
		<where>
			<choose>
				<when test="idx == 1">
					empno = #{keyword}
				</when>
				<when test="idx == 2">
					ename like concat('%',#{keyword},'%')
				</when>
				<when test="idx == 3">
					job like concat('%',#{keyword},'%')
				</when>
				<when test="idx == 4">
					deptno = #{keyword}
				</when>
			</choose>
		</where>
	</select>
	<!-- collection="list"  : 파라미터가 List<String> 형태의 값을 의미 -->
	<!-- 리스트에서 하나 추출한 것을 의미  -->
	<select id="getJobsSearch" resultType="com.ict.edu04.vo.EmpVO">
		select * from emp 
		<where>
			<foreach collection="list" item="job" open=" job IN ("  separator="," close=")" >
				#{job}   
			</foreach>
		</where>
	</select>
	
	<select id="getEmpNoNameSearch"  resultType="com.ict.edu04.vo.EmpVO">
		select * from emp 
		<where>
			<trim prefixOverrides="OR">
				<if test="empno !=null and empno != ''">
					OR empno =#{empno}
				</if>
				<if test="ename !=null and ename != ''">
					OR ename =#{ename}
				</if>
			</trim>
		</where>
	</select>
</mapper>















